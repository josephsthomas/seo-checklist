rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isProjectOwner() {
      return isAuthenticated() &&
             resource.data.ownerId == request.auth.uid;
    }

    function isTeamMember() {
      return isAuthenticated() &&
             (resource.data.ownerId == request.auth.uid ||
              request.auth.uid in resource.data.teamMembers);
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      // User settings subcollection - notification preferences, etc.
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Projects collection - project owners and team members can access
    match /projects/{projectId} {
      allow read: if isTeamMember();
      allow create: if isAuthenticated() &&
                     request.resource.data.ownerId == request.auth.uid;
      allow update: if isProjectOwner() || isTeamMember();
      allow delete: if isProjectOwner();
    }

    // Checklist completions - linked to projects
    match /checklist_completions/{completionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Custom items - project-specific checklist items
    match /custom_items/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Phase 6: Comments - team members can read/write comments on tasks
    match /comments/{commentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Phase 6: Notifications - users can read their own notifications
    match /notifications/{notificationId} {
      allow read, update: if isAuthenticated() &&
                            resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;
    }

    // Phase 6: Activity Log - authenticated users can read, system can write
    match /activity_log/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
    }

    // Phase 6: Task Assignments - linked to projects
    match /checklist_assignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Phase 9: Time Entries - authenticated users can manage their own entries
    match /time_entries/{entryId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Phase 9: File Attachments - authenticated users can upload/delete
    match /attachments/{attachmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                     request.resource.data.uploadedBy == request.auth.uid;
      allow delete: if isAuthenticated() &&
                     resource.data.uploadedBy == request.auth.uid;
    }

    // Feedback collection - authenticated users can submit feedback
    match /feedback/{feedbackId} {
      allow read: if false; // Only admins via Firebase Console
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
    }

    // Shared audits - public read access for shared links
    match /sharedAudits/{shareId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Audits collection - users can manage their own audits
    match /audits/{auditId} {
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Alt Text History - users can manage their own history
    match /altTextHistory/{historyId} {
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Project Links - authenticated users can manage links
    match /projectLinks/{linkId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Due Dates - authenticated users can manage due dates
    match /due_dates/{dueDateId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Checklist Templates - authenticated users can manage templates
    match /checklistTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Schema Library - users can manage their saved schemas
    match /schemaLibrary/{schemaId} {
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Custom Reports - users can manage their report configurations
    match /customReports/{reportId} {
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                              resource.data.userId == request.auth.uid;
    }

    // Export History - users can view their export history
    match /export_history/{exportId} {
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
                     request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;
    }

    // Custom Checklist Items - authenticated users can manage
    match /custom_checklist_items/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
